{
  "name": "Fondasyon Backup Spirituel",
  "short_name": "Fobas",
  "description": "Fobas is the official app of the Fondation Backup Spirituel, promoting peace, justice, and ethical digital transformation in Haiti.",
  "id": "/",
  "start_url": "/index.html",
  "display": "standalone",
  "orientation": "portrait",
  "background_color": "#ffffff",
  "theme_color": "#0d47a1",
  "icons": [
    {
      "src": "/assets/icons/icon-192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "/assets/icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "screenshots": [
    {
      "src": "/assets/screenshots/screen1.png",
      "sizes": "540x720",
      "type": "image/png",
      "label": "Home Page"
    },
    {
      "src": "/assets/screenshots/screen2.png",
      "sizes": "540x720",
      "type": "image/png",
      "label": "Voting Section"
    }
  ],
  "shortcuts": [
    {
      "name": "Vote Now",
      "short_name": "Vote",
      "description": "Vote for your favorite artist",
      "url": "/vote.html",
      "icons": [{ "src": "/assets/icons/icon-192.png", "sizes": "192x192", "type": "image/png" }]
    },
    {
      "name": "Prayer Request",
      "short_name": "Prayers",
      "description": "Send a prayer request to Fobas",
      "url": "/priere.html",
      "icons": [{ "src": "/assets/icons/icon-192.png", "sizes": "192x192", "type": "image/png" }]
    }
  ],
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "display_override": ["window-controls-overlay", "standalone"]
}
